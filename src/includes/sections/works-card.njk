<section class="pt-small pb-small pb-md-large" data-scroll-section>
  <div class="container-md">
    <svg class="service-wrap-svg" width="1359" height="67" viewBox="0 0 1359 67" fill="none" xmlns="http://www.w3.org/2000/svg">
      <g clip-path="url(#clip0_3617_58)">
        <path d="M0 33.3591V66.5581L564.5 66.5581C511.05 66.5581 507.063 0.647538 442.5 0.19917C389.621 -0.168058 126.527 0.0665279 33.0351 0.16346C14.7152 0.182454 0 15.0393 0 33.3591Z" fill="var(--color-light-2)"/>
      </g>
    </svg>
    <div class="service-wrap p-3 pb-0 p-md-5 pt-md-0 pb-md-0 bg-light-2">
      <h2 class="xl split-lines mt-md-0 mb-4 mb-md-5">Realizacje</h2>
      {% for post in collections
        .works
        .slice(0, 5) %}
          <div class="works-grid-item border bg-light-1 row g-0 flex-md-row-reverse align-items-center">
            <div class="col-lg-6 col-xl-6">
              <a href="{{ post.url }}" title="{{ post.data.title }}">
                <div class="portfolio-item fade-in">
                  <svg class="works-item-svg d-none d-md-block" width="106" height="106" viewBox="0 0 106 106" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <g clip-path="url(#clip0_3629_8)">
                      <path d="M0 0.000350952H97L0 93.5859V0.000350952Z" fill="var(--color-light-1)"/>
                      <path d="M0.000786304 93.1081V106C0.698628 96.9279 3.49 90.7207 7.32812 86.4234L0.000786304 93.1081Z" fill="var(--color-light-1)"/>
                      <path d="M96.1982 0.0179638L86.8796 9.85554C93.9438 3.41271 100.457 0.595711 106.35 -0.0440094L96.1982 0.0179638Z" fill="var(--color-light-1)"/>
                    </g>
                    <defs>
                      <clipPath id="clip0_3629_8">
                        <rect width="106" height="106" fill="var(--color-light-1)" transform="matrix(1 0 0 -1 0 106)"/>
                      </clipPath>
                    </defs>
                  </svg>

                  <div class="hover-img-wrap aspect_md_16-13">
                    {% workImage "src/" + post.data.thumbnail,
                    post.data.title %}
                  </div>
                </div>
              </a>
            </div>
            <div class="col-lg-6 col-xl-6 p-3 p-md-5">
              <p class="color-dark-2 mt-3 mt-md-0 mb-2 fade-in">
                {{ post.data.client }}
              </p>
              <h3 class="archive-post-title h2 my-3 fade-in">
                {{ post.data.title }}
              </h3>
              <p class="line-clamp-3 mt-4 mb-4 split-lines">
                {{ post.data.description }}
              </p>

              <a href="{{ post.data.link }}" title="{{ post.data.title }}" class="button-anim magnetic fade-in"
                  data-strength="60"
                  target="_blank">
                <div class="button-anim-text">
                  <span>Zobacz online</span>
                  <span>Zobacz online</span>
                </div>

                <div class="button-anim-icon">
                  <svg class="icon-link" width="18" height="18" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" viewBox="0 0 100 100" style="enable-background:new 0 0 100 100;" xml:space="preserve">
                    <g><path fill="#fff" d="M83.3,79.7c0,2-1.6,3.6-3.6,3.6H20.3c-2,0-3.6-1.6-3.6-3.6V20.3c0-2,1.6-3.6,3.6-3.6h23.4V9.5H20.3   c-6,0-10.8,4.8-10.8,10.8v59.4c0,6,4.8,10.8,10.8,10.8h59.4c6,0,10.8-4.8,10.8-10.8V56.3h-7.2V79.7z"/><polygon fill="#fff" points="56.3,9.5 56.3,16.7 78.2,16.7 49.9,45 55,50.1 83.3,21.8 83.3,43.7 90.5,43.7 90.5,9.5  "/></g>
                  </svg>
                </div>
              </a>
              <div class="pb-xxsmall d-md-none"></div>
            </div>
          </div>
        <div class="pb-small"></div>
      {% endfor %}
    </div>
  </div>
</section>