<section class="pt-large pb-large bg-dark-1">
  <div class="container">
    <div class="row g-3">
      {% for post in collections.clients %}
      <div class="col-6 col-md-3">
        <div class="client-card p-5 bg-dark-2 rounded-md">
          <img src="{{ post.data.logo }}" loading="lazy" width="338" height="143" alt="{{ post.data.title }} - Logo" />
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
