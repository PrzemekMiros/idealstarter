<section class="bg-dark-1" id="realizacje">
  <div class="pt-small pb-small rounded-xl bg-light-2">
  <div class="container">
          <div class="col-md-6 mx-auto text-center mb-5">
            <p class="handwrite my-0 fade-in">Zobacz</p>
            <h2 class="h1 mt-0 split-lines">
                Wybrane realizacje
            </h2>
            <p class="split-lines">
            Pomogłem zrealizować cele biznesowe wielu firmom, małym i dużym. Dobre opinie to dla mnie najlepsza nagroda
            </p>
        </div>
    <div class="w-xl-80 mx-auto">
      {% for post in collections.works.slice(0, 3) %}
      <a href="{{ post.data.link }}" title="{{ post.data.title }}">
          <div class="rounded-md shadow-2 mb-5 bg-light-1 fade-in">
          <div class="row flex-md-row-reverse align-items-center">
            <div class="col-md-6">
                <div class="p-2">
                    {% workImage "src/" + post.data.thumbnail, post.data.title %}
                </div>
            </div>
            <div class="col-md-6">
              <div class="p-2 p-md-5">
              <p class="color-accent-1 mb-3">
                {{ post.data.client }}
              </p>
              <h3 class="mt-0">
                {{ post.data.title }}
              </h3>
              <p class="">
                {{ post.data.description }}
              </p>
                </div>
            </div>
          </div>
          </div>
        </a>
      {% endfor %}
    </div>
    <div class="text-center fade-in">
      <a href="/realizacje/" title="Realizacje" class="button-anim btn-write magnetic" data-strength="60">
                <div class="button-anim-text">
                  <span>Więcej realizacji</span>
                  <span>Więcej realizacji</span>
                </div>
                <div class="button-anim-icon">
                  <svg class="icon-pencil" width="18" height="18" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <rect id="view-box" fill="none"/>
                    <path id="Shape" d="M.75,17.5A.751.751,0,0,1,0,16.75V12.569a.755.755,0,0,1,.22-.53L11.461.8a2.72,2.72,0,0,1,3.848,0L16.7,2.191a2.72,2.72,0,0,1,0,3.848L5.462,17.28a.747.747,0,0,1-.531.22ZM1.5,12.879V16h3.12l7.91-7.91L9.41,4.97ZM13.591,7.03l2.051-2.051a1.223,1.223,0,0,0,0-1.727L14.249,1.858a1.222,1.222,0,0,0-1.727,0L10.47,3.91Z" transform="translate(3.25 3.25)" stroke-width="2px" fill="var(--color-accent-1)"/>
                  </svg>
                  <div class="icon-line"></div>
                </div>
              </a>
    </div>
  </div>
  </div>
</section>