<section class="bg-dark-1" itemscope itemtype="https://schema.org/FAQPage">
  <div class="pt-medium pb-medium rounded-xl bg-light-1">
    <div class="container">
          <div class="accordion-wrap w-md-70 mx-auto"> 
            {% for post in collections.faq %}
            <div class="bg-light-1 rounded-md shadow-1 p-4 mb-3 fade-in" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
              <button class="accordion my-3">
                <span class="h3 title my-0" itemprop="name">
                  {{ post.data.title }}
                </span>
                <span class="icon"></span>
              </button>
              <div class="panel col-md-11" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                <p itemprop="text">
                  {{ post.data.answer }}
                </p>
              </div>
            </div>
            {% endfor %}
          </div>
    </div> 
  </div>
</section> 

<style>
.accordion {
  position:relative;
  width:100%;
  background-color:transparent;
  border:none;
  text-align:left;
  cursor:pointer;
  z-index:9;

}
.accordion .title {
  padding-right:3.2em;
  line-height:1.3
}
.icon {
  width:20px;
  height:3px;
  background:var(--color-accent-1);
  opacity:.7;
  border-radius:2px;
  position:absolute;
  top:48%;
  right:0
}
.icon:before {
  content:"";
  width:20px;
  height:3px;
  background:var(--color-accent-1);
  border-radius:50%;
  transition:all 1.3s;
  -webkit-animation-timing-function:cubic-bezier(.79,0,.07,.88);
  animation-timing-function:cubic-bezier(.79,0,.07,.88);
  position:absolute;
  top:0;
  right:0;
  -webkit-transform:rotate(90deg);
  transform:rotate(90deg)
}
.accordion.open .icon:before {
  -webkit-transform:rotate(0);
  transform:rotate(0)
}
.panel {
  max-height:0;
  transition:all 1.3s cubic-bezier(.79,0,.07,.88);
  overflow:hidden
}
.panel p {
  margin:0 0 1em
}
@media (min-width:767px) {
  .accordion:after {
    font-size:1vw;
    left:-5em
  }
}
</style>